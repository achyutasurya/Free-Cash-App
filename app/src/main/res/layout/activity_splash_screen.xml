<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141517">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImage"
        android:layout_width="87.33dp"
        android:layout_height="160.6dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:layout_marginBottom="60dp"
        android:src="@drawable/splash" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/gifImage"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/internetConnectivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Checking Internet Connection..."
            android:textColor="#ffff"
            android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/progressBarInternet"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>